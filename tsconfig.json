{
  "compilerOptions": {
    "outDir": "./public/build/",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["assets/*"]
    }
  },
  "include": ["./assets/**/*"],
  "exclude": ["node_modules"]
}